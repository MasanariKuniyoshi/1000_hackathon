<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if !(logged_in?) %>
          <li><%= link_to "Signup",   signup_path %></li>
          <li><%= link_to "Login", login_path %></li>
        <% else %>
          <li><%= link_to "Logout", logout_path, method: :delete %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>